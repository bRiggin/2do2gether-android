<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="@drawable/layout_container"
        app:layout_constraintBottom_toTopOf="@+id/toDoListPageIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="80dp"
                android:layout_height="72dp"/>
            <TextView style="@style/TextViewStyle"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Title of list" />

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="80dp"
                android:layout_height="72dp">
                <ProgressBar
                    android:id="@+id/listProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:indeterminateTint="@color/blue_900"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="35"
                    android:progressDrawable="@drawable/custom_progress"/>
                <TextView style="@style/TextViewStyle"
                    android:background="#00000000"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text="35%"
                    android:gravity="center"
                    android:layout_alignStart="@id/listProgressBar"
                    android:layout_alignTop="@id/listProgressBar"
                    android:layout_alignEnd="@id/listProgressBar"
                    android:layout_alignBottom="@id/listProgressBar"/>
            </RelativeLayout>
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/toDoListsViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>

    <com.rd.PageIndicatorView
        android:id="@+id/toDoListPageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:piv_viewPager="@id/toDoListsViewPager"
        app:piv_animationType="drop"
        app:piv_dynamicCount="true"
        app:layout_constraintBottom_toTopOf="@+id/toDoListTextEntryLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/toDoListTextEntryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/toDoListEt"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/layout_edit_text"
            android:hint="@string/new_item_hint"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/toDoListItemAddBtn"
            style="@style/TextViewStyle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_button"
            android:text="@string/add"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
